<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    
    <title>OSD</title>
</head>
<body>
    <% if (locals.add) { %>
    <%- include ../layout/navbar %>
    <%}%>
    <div class="container" >
        <h2 align="center"><%=title %></h2>
        <% if (locals.errors) { %>
            <ul>
                <% Object.values(errors).forEach(function(error){ %>
                      <li><%= error.msg %></li>
                <% }); %>
            </ul>
            <% } %>
      <form class=""
      <% if(locals.add) { %>
                action="/user/add"
        <% }else{%>
            action="/register"
        <%}%>
      method="post">
        <label>ชื่อ </label>
        <input type="text" name="fname" placeholder="Enter your username" class="form-control">
        <label>นามสกุล </label>
        <input type="text" name="lname" placeholder="Enter your firstName" class="form-control">
        <div class="form-group">
            <label>ชื่อผู้ใช้</label>
            <input type="text" name="userName" placeholder="Enter your lastname" class="form-control">
        </div>
        <div class="form-group">
            <label>รหัสผ่าน</label>
            <input type="password" name="password" placeholder="Enter your password"  class="form-control">
        </div>
        <div class="form-group">
            <label>ยืนยันรหัสผ่าน</label>
            <input type="password" name="cfpassword" placeholder="Confirm your password"  class="form-control">
        </div>
        <div class="form-group">
            <label>ขอบเขตผู้ใช้งาน</label>
            <select name="domain" class = "form-control">
                <option value="0">เลือกขอบเขตผู้ใช้งาน</option>
                <option value="1">ผู้ดูแล</option>
                <option value="2">สมาชิก</option>
            </select>
        </div>
        <input type="submit" name="" value="<%=btn%>" class="btn btn-success" >
        <a  href="/login" class="btn btn-info" >ย้อนกลับ</a>
      </form>
      
    </div>

    <!-- css & javascript -->
<link rel="apple-touch-icon" type="image/png" href="https://static.codepen.io/assets/favicon/apple-touch-icon-5ae1a0698dcc2402e9712f7d01ed509a57814f994c660df9f7a952f3060705ee.png" />
