<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    
    <title>OSD</title>
</head>
<body>
    <%- include ../layout/navbar %>
    <div class="container" >
        <h2 align="center">แก้ไขข้อมูลสมาชิก</h2>
        <% if (locals.errors) { %>
            <ul>
                <% Object.values(errors).forEach(function(error){ %>
                      <li><%= error.msg %></li>
                <% }); %>
            </ul>
            <% } %>
            <!-- <h2 align="center"> <%= user %></h2> -->
      <form class="" action="/user/update" method="post">
        <input type="hidden" name = "id" value="<%=user._id%>"  >
        <label>ชื่อ </label>
        <input type="text" name="fname" placeholder="Enter your firstName" value="<%= user.firstName %>" class="form-control">
        <label>นามสกุล </label>
        <input type="text" name="lname" placeholder="Enter your lastname" value="<%= user.lastName %>" class="form-control">
        <div class="form-group">
            <label>ชื่อผู้ใช้</label>
            <input type="text" name="userName" placeholder="Enter your userName" value="<%= user.userName %>" class="form-control">
        </div>
        <!-- <div class="form-group">
            <label>รหัสผ่าน</label>
            <input type="password" name="password" placeholder="Enter your password"  class="form-control">
        </div>
        <div class="form-group">
            <label>ยืนยันรหัสผ่าน</label>
            <input type="password" name="cfpassword" placeholder="Confirm your password"  class="form-control">
        </div> -->
        <div class="form-group">
            <label>ขอบเขตผู้ใช้งาน</label>
            <select name="domain" class = "form-control">
                <option value="1" <% if(user.domain == '1'){%> selected <%}%>
                    >ผู้ดูแล</option>
                <option value="2" <% if(user.domain == '2'){%> selected <%}%>
                >สมาชิก</option>
            </select>
            <!-- <input type="text" name="domain" placeholder="Enter your domian" value="<%= user.domain %>" class="form-control"> -->
        </div>
        
        <input type="submit" name="" value="อัพเดท" class="btn btn-success" >
        <a  href="/user" class="btn btn-info" >ย้อนกลับ</a>
      </form>
      
    </div>
</body>
</html>